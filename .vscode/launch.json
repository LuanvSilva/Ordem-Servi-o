{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Tests",
        "program": "${workspaceFolder}/node_modules/jest/bin/jest", // Caminho para o executável do Jest
        "args": [
          "--runInBand", // Executa os testes em série
          "--watchAll=false" // Desativa o modo watch
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": [
          "<node_internals>/**"
        ]
      }
    ]
  }
  